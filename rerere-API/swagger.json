{
  "swagger": "2.0",
  "info": {
    "title": "Rerere - API",
    "description": "Este es el API del laboratorio de backend para la aplicación Rerere",
    "version": "1.0.0"
  },
  "host": "localhost:7500",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Ingrese su token bearer"
    }
  },

  "paths": {
    "/upload": {
      "post": {
        "tags": [
          "Upload Image"
        ],
        "summary": "Sube una imagen",
        "description": "Upload para las imágenes de los productos",
        "consumes": "multipart/form-data",
        "produces": "application/json",
        "security":[
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "picture",
            "in": "formData",
            "type": "file"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Devuelve una lista de los usuarios",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Se utiliza para ingresar al sitio, devuelve la información del usuario con su respectivo token",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "lotazi@mailo.icu"
                },
                "contrasena": {
                  "example": "asdf1234"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/recover-password": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Envía un correo para cambiar la contraseña",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "ldiego.esquivel1001@gmail.com"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/reset-password": {
      "patch": {
        "tags": [
          "Users"
        ],
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "any"
                },
                "code": {
                  "example": "any"
                },
                "password": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/": {
      "post": {
        "tags": [
          "Product"
        ],
        "description": "",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Create a product",
            "schema": {
              "$ref": "#/definitions/AddProduct"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "AddUser": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "CI0137"
        },
        "email": {
          "type": "string",
          "example": "cloud@polpocr.com"
        },
        "password": {
          "type": "string",
          "example": "patito"
        },
        "phoneCountryCode": {
          "type": "number",
          "example": 506
        },
        "phone": {
          "type": "number",
          "example": 70155104
        },
        "birthdate": {
          "type": "string",
          "example": "1989-10-16"
        }
      }
    },
    "AddProduct": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Nombre del producto"
        },
        "price": {
          "type": "number",
          "example": 9999
        },
        "description": {
          "type": "string",
          "example": "Lorem ipsum kljdsf adsf asf adsf"
        },
        "picture": {
          "type": "string",
          "example": "https://domain.com/picture.jpg"
        }
      }
    }
  }
}